<section style="background-color: rgb(254, 248, 248);">  
      <div class="row">
        <div class="col-lg-4">
          <div class="card mb-4">
            <div class="card-body text-center" style="height:300px;">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                class="rounded-circle img-fluid" style="width: 150px;">
              <h5 class="my-3"><%=username%></h5>                           
            </div>
          </div>          
        </div>
        <div class="col-lg-8">
          <div class="card mb-4">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                    <p class="mb-0">Full Name</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%=username%></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Email</p>
                </div>
                <div class="col-sm-9">
                    <p class="text-muted mb-0"><%=email%></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Phone</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%=contact%></p>
                </div>
              </div>      
              <hr>                                   
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Joining</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%=joining%></p>
                </div>
              </div>                                         
              <hr>                                   
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">department</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%=department%></p>
                </div>
              </div>  
              <hr>                                       
              <div class="row" id="setting">
                <div class="col-sm-3">
                  <p class="mb-0">Setting</p>
                </div>
                <div class="col-sm-9">
                    <a href="#">Change Password</a>                  
                </div>
              </div>                                         
            </div>
          </div>          
        </div>
      </div>
    </div>
  </section>